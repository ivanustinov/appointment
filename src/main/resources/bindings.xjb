<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<jaxb:bindings version="3.0" xmlns:jaxb="https://jakarta.ee/xml/ns/jaxb"
               xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc" xmlns:xs="http://www.w3.org/2001/XMLSchema"
               jaxb:extensionBindingPrefixes="xjc">

    <jaxb:globalBindings>
        <xjc:simple />
        <xjc:serializable uid="-1" />
        <jaxb:javaType name="java.time.LocalDateTime" xmlType="xs:dateTime"
                       parseMethod="ru.ustinov.appointment.xml.DateTypeConverter.parseDateTime"
                       printMethod="ru.ustinov.appointment.xml.DateTypeConverter.printDateTime" />
        <jaxb:javaType name="java.time.LocalDate" xmlType="xs:date"
                       parseMethod="ru.ustinov.appointment.xml.DateTypeConverter.parseDate"
                       printMethod="ru.ustinov.appointment.xml.DateTypeConverter.printDate" />
        <jaxb:javaType name="java.time.LocalTime" xmlType="xs:time"
                       parseMethod="ru.ustinov.appointment.xml.DateTypeConverter.parseTime"
                       printMethod="ru.ustinov.appointment.xml.DateTypeConverter.printTime" />
    </jaxb:globalBindings>
</jaxb:bindings>
